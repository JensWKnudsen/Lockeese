<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <EditText
        android:id="@+id/userNameToShareKeyWith"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="47dp"
        android:layout_marginTop="56dp"
        android:hint="Enter user name"
        android:inputType="text" />

    <TextView

        android:id="@+id/select_access_level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/userNameToShareKeyWith"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:text="Select a access level"
        android:textSize="20dp" />

    <RadioGroup
        android:id="@+id/accessLevelRadioGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/select_access_level"
        android:layout_alignParentLeft="false"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp">


        <RadioButton
            android:id="@+id/al2RadioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2"
            android:textSize="20dp" />

        <RadioButton
            android:id="@+id/al3RadioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/al2RadioButton"
            android:text="3"
            android:textSize="20dp" />

        <RadioButton
            android:id="@+id/al4RadioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/al3RadioButton"
            android:layout_alignParentLeft="true"
            android:text="4"
            android:textSize="20dp" />

    </RadioGroup>

    <Button
        android:id="@+id/button_cancel_sharing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/accessLevelRadioGroup"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="39dp"
        android:layout_marginTop="7dp"
        android:layout_marginBottom="20dp"
        android:gravity="center_horizontal"
        android:text="Cancel"
        android:textAllCaps="false"
        android:textSize="20dp" />

    <Button
        android:id="@+id/button_share_the_key_with"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/accessLevelRadioGroup"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="11dp"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="19dp"
        android:layout_marginRight="19dp"
        android:layout_marginBottom="20dp"
        android:gravity="center_horizontal"
        android:text="Share the key"
        android:textAllCaps="false"
        android:textSize="20dp" />

</RelativeLayout>