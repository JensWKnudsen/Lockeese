<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <EditText
        android:id="@+id/userNameToShareKeyWith"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="1dp"
        android:hint="Enter user name"
        android:inputType="text" />

    <TextView

        android:id="@+id/select_access_level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/userNameToShareKeyWith"
        android:layout_alignParentLeft="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="5dp"
        android:text="Select a access level"
        android:textSize="20dp" />

    <RadioGroup
        android:id="@+id/accessLevelRadioGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/select_access_level"
        android:layout_alignParentLeft="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="5dp">


        <RadioButton
            android:id="@+id/al2RadioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2"
            android:textSize="20dp" />

        <RadioButton
            android:id="@+id/al3RadioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/al2RadioButton"
            android:text="3"
            android:textSize="20dp" />

        <RadioButton
            android:id="@+id/al4RadioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/al3RadioButton"
            android:layout_alignParentLeft="true"
            android:text="4"
            android:textSize="20dp" />

    </RadioGroup>

</RelativeLayout>